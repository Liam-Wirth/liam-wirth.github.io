{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "jsxBracketSameLine": true,
  "arrowParens": "avoid",
  "plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-astro"],
  "tailwindConfig": "tailwind.config.mjs",
  "htmlWhitespaceSensitivity": "ignore",
  "singleAttributePerLine": true
}
