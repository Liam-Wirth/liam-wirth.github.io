---
import { socials, info } from "../assets/data.ts";
import {toTitleCase} from "../assets/data.ts";
const {pathname} = Astro.url;
---

<nav
  class="w-full h-30 bg-black text-white flex items-center px-4 py-3 top-0 z-50 
  md:justify-between xs:justify-center" >
  <ul
    class="grid justify-items-center basis-[20%]"
    style={{ gridTemplateColumns: `repeat(${socials.length}, 1fr)` }}
  >
  {
    socials.map((social) => (
      <li>
        <a
          href="#"
          class="text-2xl opacity-50 hover:opacity-100 duration:300 ease-in cursor-pointer"
        >
          <i class={social.logo} />
        </a>
        
      </li>
    ))
  }
  </ul>

  <ul  class="grid justify-items-center gap-x-3 basis-[20%]"
    style={{ gridTemplateColumns: `repeat(${info.length+ 1}, 1fr)` }}>
    <li>
      <a href="#home">Home</a>
    </li>
    {
      pathname === '/' && info.map((i => (
        <li>
          <a href={"#"+ i.text}>{i.titleText}</a>
        </li>
      )))
    }
  </ul>
</nav>
